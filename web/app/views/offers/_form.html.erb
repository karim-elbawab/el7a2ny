<%= form_for @offer, :html => {:multipart => true} do |f|%>
	<%= f.label :name%>
	<br/>
	<%= f.text_field :name %>
	<br/>
	<%= f.label :description %>
	<br/>
	<%= f.text_area :description %>
	<br/>
	<%= f.label :photo %>
	<br/>
	<%= f.file_field :photo %>
	<br/>
	<%= f.label :attachment %>
	<br/>
	<%= f.file_field :attachment %>
	<br/>
	<%= f.label :category %>
	<br/>
	<%= f.text_field :category %>
	<br/>
	<%= f.label :private %>
	<br/>
	<%= f.check_box :private %>
	<br/>
	<%= f.submit %>
<% end %>	

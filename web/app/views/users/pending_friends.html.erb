<h1> Pending Friends </h1>

 <% if @users.present? %>
  <ul>
   	<% @users.each do |user| %>
   	 <li>
      <%=link_to image_tag(user.profile_picture_url), show_other_user_user_path(user) %>
      <p>
        <strong><%= link_to user.name, show_other_user_user_path(user) %></strong>
        &mdash;
        <%= link_to "Confirm Friend", friendship_path(:friend_id => user), :method => :patch %>
        &mdash;
        <%= link_to "Ignore", friendship_path(:friend_id => user), :method => :delete, :confirm => 'Are you sure?' %>
      </p> 
     </li>	
     <hr> 
    <% end %>
  </ul> 
 <% else %>
 	You haven't any pending friends. 		
 <% end %>

<%= link_to 'Back to home', root_path %>
